@model APIGateway.Models.BankViewModel
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bank Online</title>
    <link rel="stylesheet" href="~/styles/bankStyles.css" />
    <style>
        #simulationIndicator {
            position: fixed;
            bottom: 20px;
            right: 20px;
            padding: 10px;
            background-color: #ffcc00;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
            display: none;
            z-index: 1000;
        }

        .loading-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(255,255,255,0.7);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 999;
            display: none;
        }

        .spinner {
            border: 5px solid #f3f3f3;
            border-top: 5px solid #3498db;
            border-radius: 50%;
            width: 50px;
            height: 50px;
            animation: spin 1s linear infinite;
        }

        @@keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>
</head>
<body>
<div id="simulationIndicator">⚠️ Режим тестирования: включена симуляция проблем сети</div>
<div class="loading-overlay" id="loadingOverlay">
    <div class="spinner"></div>
</div>

<div class="container">
    <header class="header">
        <div class="logo">BankOnline</div>
        <div class="user-info">
            <div>@Model.FullName</div>
            <div>Счет: @Model.AccountNumber</div>
        </div>
    </header>

    <main class="main-content">
        <div class="left-column">
            <div class="card balance-section">
                <h2>Ваш баланс</h2>
                <div class="balance-amount">@Model.Balance ₽</div>
            </div>

            <div class="card">
                <h2>Кредитная информация</h2>
                <div class="credit-info">
                    <p>Непогашенный кредит: @Model.UnpaidCredit ₽</p>
                    <p>Дата погашения: @Model.CreditDueDate</p>
                </div>
            </div>
        </div>

        <div class="right-column">
            <div class="card">
                <h2>Операции</h2>
                <div class="operations">
                    <form class="operation-form" id="creditForm">
                        <h3>Погашение кредита</h3>
                        <input type="number" placeholder="Сумма" required>
                        <button type="submit" class="pay-button">Погасить</button>
                    </form>

                    <form class="operation-form" id="transferForm">
                        <h3>Перевод средств</h3>
                        <input type="number" placeholder="Сумма" required>
                        <input type="text" placeholder="Номер счета получателя" required>
                        <button type="submit" class="transfer-button">Перевести</button>
                    </form>
                </div>
            </div>
        </div>
    </main>
</div>
<script src="~/js/bankScripts.js"></script>
</body>
</html>